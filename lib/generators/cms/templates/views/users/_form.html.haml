= simple_form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:

      %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :first_name
    = f.input :last_name
    = f.input :email

  .actions
    = f.button :submit
